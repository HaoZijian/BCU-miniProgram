<!--pages/competition/competition.wxml-->
<view class="page">
  <view class="title">竞赛提交</view>
  <view class="uploader">
    <van-uploader file-list="{{ fileList }}" deletable="{{ true }}" bind:after-read="afterRead" />
  </view>
  <view class="title-1">（点击上传图片）</view>
  <view class="field">
    <van-field label="竞赛名称" model:value="{{ name }}" placeholder="请输入名称" bind:change="onChange" />
    <van-field type="textarea" model:value="{{ remark }}" placeholder="请输入竞赛说明"
      autosize=" { maxHeight: 100, minHeight: 50 }" />
  </view>
  <button class="createBtn">提交</button>
  <button class="competitionList" bindtap="toCompetitionList">我的竞赛</button>
</view>